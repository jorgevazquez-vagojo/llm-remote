# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=

# Comma-separated list of authorized Telegram user IDs
AUTHORIZED_USERS=

# Master encryption password (used to derive all keys)
# Generate a strong one: openssl rand -base64 32
MASTER_PASSWORD=

# PIN for session authentication (6+ digits)
AUTH_PIN=

# Session timeout in minutes (auto-lock after inactivity)
SESSION_TIMEOUT_MIN=15

# Rate limit: max commands per minute
RATE_LIMIT_PER_MIN=10

# Default working directory for Claude Code
DEFAULT_WORK_DIR=

# Claude Code binary path (leave empty for default)
CLAUDE_BIN=claude

# Auto-delete bot messages after N seconds (0 = disabled)
AUTO_DELETE_SEC=0

# Max concurrent Claude processes
MAX_CONCURRENT=2

# --- AI Providers (optional, leave empty to disable) ---

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Google Gemini (free: 20 req/day)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash-preview-05-20

# Anthropic (direct API, non-agentic)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Groq (free, ultra-fast, Llama 3.3 70B)
# Get key: https://console.groq.com/keys
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# --- Claude Code CLI (optional, agentic mode) ---

# Max agentic turns per request (applies to local + remote)
CLAUDE_MAX_TURNS=25

# Max execution time in seconds
CLAUDE_TIMEOUT_SEC=300

# --- Claude Code Remote (via SSH to another machine) ---
# Use case: Claude CLI authenticated on a Mac/desktop, bot runs on a server.
# Connect via reverse SSH tunnel or direct SSH.

# SSH host (e.g., "localhost" for tunnel, or IP/hostname)
CLAUDE_REMOTE_HOST=
# SSH port (e.g., 2222 for tunnel, 22 for direct)
CLAUDE_REMOTE_PORT=22
# SSH username on the remote machine
CLAUDE_REMOTE_USER=
# Path to SSH private key (optional, uses ssh-agent if empty)
CLAUDE_REMOTE_KEY=
# Claude binary on the remote machine (default: "claude")
CLAUDE_REMOTE_BIN=claude
# Default working directory on the remote machine
CLAUDE_REMOTE_WORK_DIR=

# Log level: debug, info, warn, error
LOG_LEVEL=info

# --- Inter-Bot Shared Memory (optional) ---

# This bot's name (used to identify in shared memory)
BOT_NAME=

# Peer bot names â€” comma-separated (who this bot talks to, empty = no peers)
# Each bot selectively chooses its peers. Example: "isa,carlos"
PEER_BOT_NAMES=

# Path to shared directory (mounted Docker volume, e.g., /shared)
SHARED_DATA_DIR=

# Enable autonomous inter-bot chat (bots talk without human intervention)
# "true" = auto-respond to peer messages; "false" = manual only (/mensaje, /compartir)
INTER_BOT_AUTO=false
